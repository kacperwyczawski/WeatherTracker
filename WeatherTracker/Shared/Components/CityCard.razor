<MudGrid Spacing="1">

    <MudItem xs="11">
        <MudPaper Class="pa-4 mud-height-full d-flex align-center gap-4">
            <img src="@IconUrl" alt="weather icon" height="64px"/>
            <MudText Typo="Typo.h3">@CityName</MudText>
            <MudSpacer/>
            <MudText Typo="Typo.h3">@Temperature°C</MudText>
            <MudText Typo="Typo.h3">@Humidity%</MudText>
        </MudPaper>
    </MudItem>

    <MudItem xs="1">
        <MudGrid Spacing="1">

            <MudItem xs="12">
                <MudPaper Class="pa-4 d-flex align-center justify-center">
                    <MudIconButton Icon="@Icons.Filled.BarChart" OnClick="OnDetails"/>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudPaper Class="pa-4 d-flex align-center justify-center">
                    <MudIconButton Icon="@Icons.Filled.Delete" OnClick="OnDelete"/>
                </MudPaper>
            </MudItem>

        </MudGrid>
    </MudItem>

</MudGrid>

@code {

    [Parameter]
    public string? CityName { get; set; }

    [Parameter]
    public string? IconId { get; set; }

    [Parameter]
    public decimal? Temperature { get; set; }

    [Parameter]
    public decimal? Humidity { get; set; }
    
    [Parameter]
    public EventCallback OnDetails { get; set; }
    
    [Parameter]
    public EventCallback OnDelete { get; set; }

    string IconUrl => $"https://openweathermap.org/img/wn/{IconId}@2x.png";

}