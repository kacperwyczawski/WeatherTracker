<MudPaper Class="pa-2">
    <MudGrid Spacing="1">

        <MudItem xs="8">
            <MudPaper Class="d-flex align-center pa-3">
                <img src="@IconUrl" alt="weather icon" height="48px"/>
                <MudText Typo="Typo.h4">@CityName</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="2">
            <MudPaper Class="d-flex align-center justify-center pa-3">
                <MudIconButton Icon="@Icons.Filled.BarChart" OnClick="OnDetails"/>
            </MudPaper>
        </MudItem>

        <MudItem xs="2">
            <MudPaper Class="d-flex align-center justify-center pa-3">
                <MudIconButton Icon="@Icons.Filled.Delete" OnClick="OnDelete"/>
            </MudPaper>
        </MudItem>

        <MudItem xs="6">
            <MudPaper Class="d-flex align-center justify-center pa-3">
                <MudText Typo="Typo.h4">@Temperature°C</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="6">
            <MudPaper Class="d-flex align-center justify-center pa-3 gap-2">
                <MudIcon Icon="@Icons.Filled.WaterDrop" Size="Size.Large"/>
                <MudText Typo="Typo.h4">@Humidity%</MudText>
            </MudPaper>
        </MudItem>

    </MudGrid>
</MudPaper>

@code {

    [Parameter]
    public string? CityName { get; set; }

    [Parameter]
    public string? IconId { get; set; }

    [Parameter]
    public decimal? Temperature { get; set; }

    [Parameter]
    public decimal? Humidity { get; set; }

    [Parameter]
    public EventCallback OnDetails { get; set; }

    [Parameter]
    public EventCallback OnDelete { get; set; }

    string IconUrl => $"https://openweathermap.org/img/wn/{IconId}@2x.png";

}